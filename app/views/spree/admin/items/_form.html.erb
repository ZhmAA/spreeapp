<%= form_for [:admin, @item], html: { multipart: true } do |f| %>
  <%= f.text_field :name %>
  <%= f.select :category_id, options_for_select(@categories) %>
  <%= f.file_field :image %>

  <% unless @item.id.nil? %>
    <%= f.hidden_field :id, value: @item.id %>
  <% end %>

  <%= f.submit 'Save' %>
<% end %>
