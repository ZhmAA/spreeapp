<% content_for :page_title do %>
  <%= plural_resource_name(Spree::Category) %>
<% end %>

<%= button_link_to 'Create Category', new_admin_category_url, { class: "btn-success", icon: 'add', id: 'admin_new_category' } %>

<table class="table" id="listing_products">
  <tbody>
    <% @categories.each do |category| %>
      <tr id="<%= spree_dom_id category %>" data-hook="admin_categories_index_rows" class="<%= cycle('odd', 'even') %>">
        <td><%= link_to category.try(:name), edit_admin_category_path(category) %></td>
        <td><%= category.soft_position %></td>
        <td><%= link_to 'Destroy category', admin_category_path(category), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
